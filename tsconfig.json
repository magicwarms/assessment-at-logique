{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "types": ["node", "jest", "supertest"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}