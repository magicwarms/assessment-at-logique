{
  "name": "books-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npm run lint && nodemon --verbose --watch \"**/*.ts\" --exec \"node --inspect=0.0.0.0:9229 -r ts-node/register\" server.ts --legacy-watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm migration:generate -- -d ./database/ormconfig.ts ",
    "migration:run": "npm run typeorm migration:run -- -d ./database/ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./database/ormconfig.ts",
    "lint": "eslint **/*.ts --config eslint.config.mjs",
    "lint:fix": "eslint **/*.ts --config eslint.config.mjs --fix"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "inversify": "^6.0.2",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.4.6",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  }
}